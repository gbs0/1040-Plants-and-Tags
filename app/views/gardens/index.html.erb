<p style="color: green"><%= notice %></p>
<%= render 'shared/banner' %>
<div class="container">
<h1>Gardens</h1>

<div id="gardens">
  <% @gardens.each do |garden| %>
    <%= render garden %>
    <p>
      <%= link_to "Show this garden", garden, class:"btn btn-sm btn-info" %>
    </p>
  <% end %>
</div>

<%= link_to "New garden", new_garden_path, class: "btn btn-primary" %>
</div>